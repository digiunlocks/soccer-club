# Database Configuration
MONGO_URI=mongodb://localhost:27017/soccerclub
MONGO_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/soccerclub

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration
# For Gmail: Use app-specific password (see: https://support.google.com/accounts/answer/185833)
# Enable 2-factor authentication, then create an app password in your Google Account settings
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Alternative email configuration (same as above, different naming)
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Email addresses for different purposes
EMAIL_FROM=noreply@soccerclub.com
ADMIN_EMAIL=admin@soccerclub.com
SUPPORT_EMAIL=support@soccerclub.com

# Admin Account Configuration (for production setup)
# These credentials will be used to create the initial super admin account
# In development, defaults are used if not set
ADMIN_EMAIL=admin@soccerclub.com
ADMIN_PASSWORD=admin123
ADMIN_USERNAME=admin
ADMIN_NAME=Super Admin
ADMIN_PHONE=555-0000

# Frontend URL (used in email links)
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_ORIGIN_PROD=https://yourdomain.com

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site is under maintenance. Please check back later. 